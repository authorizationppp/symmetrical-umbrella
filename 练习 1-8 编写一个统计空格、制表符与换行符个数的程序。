百度来的：
// '\t' 制表符 '\n' 换行符
/*******Author: 时光伴岁月************************/
/*******Date: 20170902****************************/
#include<stdio.h>

int main(void)
{
    int count_tab=0;
    int count_newline=0;
    int count_space=0;
    int  c;

    while((c=getchar())!=EOF)
    {
        if(c=='\t'){
            ++count_tab;
        }
        if(c=='\n'){    
            ++count_newline;
        }
        if(c==' '){
            ++count_space;
        }

    }
    printf("tab_count=%d\t\t \
                newline_count=%d\t\t \
                space_count=%d\t\t\n",count_tab,count_newline,count_space);

    return 0;
}
