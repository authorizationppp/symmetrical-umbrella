#include<stdio.h>
int n1,n2,n3,a;
int main()
{   

    n1 = 0;
    n2 = 0;
    n3 = 0;
	while((a = getchar()) != EOF)
	{   


		if(a == ' ')
		{
		    n1++;
		}
		if(a == '\n')
		{
		   n2++;
		}
		if(a == '\t')
		{
			n3++;
		}

	}
   printf("\n空格个数%d  行数%d  制表符个数%d",n1,n2,n3);

}
 //dev-c++不报错，但不能实现功能。  
